# --- DB 설정 ---
DB_URL=jdbc:mysql://localhost:3306/DearDream?serverTimezone=Asia/Seoul&characterEncoding=UTF-8  # MySQL DB URL
DB_USERNAME=db-username          # DB 사용자명
DB_PASSWORD=db-password          # DB 비밀번호

# --- Kakao OAuth 설정 ---
KAKAO_CLIENT_ID=your-kakao-client-id                          # 카카오 REST API 키
KAKAO_REDIRECT_URI=http://localhost:8080/login/oauth2/code/kakao  # 카카오 리디렉션 URI

# --- JWT 설정 ---
JWT_SECRET=your-jwt-secret-key                # JWT 서명용 시크릿 키 (길고 랜덤하게 설정 권장)
JWT_ACCESS_TOKEN_EXPIRATION=3600000           # Access Token 유효기간 (ms)
JWT_REFRESH_TOKEN_EXPIRATION=1209600000       # Refresh Token 유효기간 (ms)

# --- Redis 설정 ---
REDIS_HOST=localhost         # Redis 호스트
REDIS_PORT=6379              # Redis 포트
REDIS_TIMEOUT=6000           # Redis 연결 타임아웃(ms)
